<?xml version="1.0" encoding="utf-8"?>
<!-- android:background="@drawable/list_selector" -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/LLCard"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_marginLeft="5dp"
	android:layout_marginRight="5dp"
	android:layout_marginBottom="15dp"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="10dp"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/image_view"
			android:layout_width="66dp"
			android:layout_height="65dp"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="5dp"
			android:layout_marginTop="5dp"
			android:layout_marginRight="5dp"
			android:layout_marginBottom="5dp" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/appbar_padding_top"
			android:orientation="vertical">

			<TextView
				android:id="@+id/textview_card_list_item_artist"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/appbar_padding_top"
				android:layout_marginTop="@dimen/appbar_padding_top"
				android:layout_marginBottom="@dimen/appbar_padding_top"
				android:textColor="@color/colorPrimaryDark" />

			<TextView
				android:id="@+id/textview_card_list_item_title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/appbar_padding_top"
				android:layout_marginTop="@dimen/appbar_padding_top"
				android:layout_marginBottom="@dimen/appbar_padding_top"
				android:textColor="@color/colorPrimaryDark"
				android:textSize="14sp" />

			<TextView
				android:id="@+id/textview_card_list_item_year"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/appbar_padding_top"
				android:layout_marginTop="@dimen/appbar_padding_top"
				android:layout_marginBottom="@dimen/appbar_padding_top"
				android:textColor="@color/colorPrimaryDark"
				android:textSize="14sp" />

			<TextView
				android:id="@+id/textview_card_list_item_location"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/appbar_padding_top"
				android:layout_marginTop="@dimen/appbar_padding_top"
				android:layout_marginBottom="@dimen/appbar_padding_top"
				android:textColor="@color/colorPrimaryDark"
				android:textSize="14sp" />
		</LinearLayout>
	</LinearLayout>

</LinearLayout>